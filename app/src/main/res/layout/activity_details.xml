<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBG"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edgecasedevelopment.fitterthanfit.DetailsActivity"
    android:background="#2ca5f5">

    <TextView
        android:text="Weight Lifting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exerciseTitle"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:id="@+id/exerciseImage"
        android:src="@drawable/weight" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000">

        <TextView
            android:text="Mark It Complete!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingTop="10dp"
            android:textColor="#fff" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            app:buttonTint="#fff" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            app:buttonTint="#fff" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            app:buttonTint="#fff" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            app:buttonTint="#fff" />

        <CheckBox
            android:text="Complete Set 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            app:buttonTint="#fff" />
    </LinearLayout>
</LinearLayout>
